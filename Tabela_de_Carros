    <title>Arrays</title>
</head>
<body>
    <script>    
        const carros = [
            "Gol",
            "Fusca",
            "Virtus",
            "Ka" 
        ]
        carros.push("Fiesta")
        carros.unshift("Palio")            

        /*
        splice serve para:

        Excluir itens a partir de uma posição
        ex: carros.splice(2, 3) -> exclui 3 itens a partir da posição 2

        Inserir itens a partir da posição 
        ex: carros.splice(3, 0, 'Uno') -> adicionar o item 'Uno' na posição 3

        Alterar itens a partir de uma posição 
        ex: carros.splice(1, 1, 'Uno') -> na posição 1 após apagar o item que lá estava

        */

        carros.splice(1,0, 'Uno')
        console.table(carros)

        carros.sort()
        console.table(carros)




    </script>
</body>
</html>
